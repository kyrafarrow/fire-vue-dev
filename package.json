{
  "name": "vuefire",
  "version": "2.0.0-alpha",
  "description": "Firestore bindings for Vue.js",
  "main": "dist/vuefire.js",
  "files": [
    "dist/**",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint --ext=js,html src tests examples",
    "test": "npm run lint",
    "unit": "nyc ava test/*.js",
    "dev": "npm run unit -- -w",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuejs/vuefire.git"
  },
  "keywords": [
    "vue",
    "plugin",
    "mixin",
    "firebase",
    "database",
    "firestore",
    "realtime"
  ],
  "author": "Eduardo San Martin Morote",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vuejs/vuefire/issues"
  },
  "homepage": "https://github.com/vuejs/vuefire#readme",
  "peerDependencies": {
    "firebase": "^4.5.0"
  },
  "devDependencies": {
    "ava": "^0.23.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "cross-env": "^5.0.5",
    "cz-conventional-changelog": "^2.0.0",
    "firebase": "^4.5.0",
    "mkdirp": "^0.5.1",
    "nyc": "^11.2.1",
    "rollup": "^0.50.0",
    "rollup-plugin-buble": "^0.16.0",
    "uglify-js": "^3.1.7",
    "vue": "^2.4.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "sourceMap": false,
    "instrument": true,
    "reporter": [
      "lcov",
      "text"
    ],
    "require": [
      "babel-register"
    ],
    "include": [
      "src/**/*.js"
    ]
  }
}
