{
  "name": "vuefire",
  "version": "1.4.4",
  "description": "Firestore bindings for Vue.js",
  "main": "dist/vuefire.js",
  "files": [
    "dist/**",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint --ext=js,html src tests examples",
    "build": "node build/build.js",
    "pretest": "npm run lint",
    "test": "npm run unit",
    "unit": "nyc ava test/**/*.spec.js",
    "dev": "npm run unit -- -w",
    "prepublishOnly": "npm run build",
    "release": "release-it premajor --preReleaseId=alpha --npm.tag=next --github.preRelease"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuejs/vuefire.git"
  },
  "keywords": [
    "vue",
    "plugin",
    "mixin",
    "firebase",
    "database",
    "firestore",
    "realtime"
  ],
  "author": "Eduardo San Martin Morote",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vuejs/vuefire/issues"
  },
  "homepage": "https://github.com/vuejs/vuefire#readme",
  "peerDependencies": {
    "firebase": ">=4.0.0"
  },
  "devDependencies": {
    "ava": "^0.23.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "cross-env": "^5.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.11.0",
    "eslint-plugin-html": "^4.0.0",
    "eslint-plugin-vue-libs": "^1.2.1",
    "firebase": "^4.6.1",
    "mkdirp": "^0.5.1",
    "nyc": "^11.3.0",
    "rollup": "^0.51.1",
    "rollup-plugin-buble": "^0.17.0",
    "sinon": "^4.1.2",
    "uglify-js": "^3.1.8",
    "vue": "^2.5.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "sourceMap": false,
    "instrument": true,
    "reporter": [
      "lcov",
      "text"
    ],
    "require": [
      "babel-register"
    ],
    "include": [
      "src/**/*.js"
    ]
  }
}
