{
  "name": "vuexfire",
  "version": "0.3.0",
  "description": "Opinionated firebase binding for vuex",
  "main": "dist/vuexfire.js",
  "scripts": {
    "lint": "eslint --ext=js,html src test examples",
    "test": "npm run lint && npm run test:unit && npm run build",
    "dev": "webpack src/index.js dist/vuexfire.js --output-library=VuexFire --output-library-target=umd --watch",
    "test:unit": "ava",
    "dev:test": "npm run test:unit -- --watch",
    "build": "node build/build.js",
    "preversion": "npm run build",
    "watch": "npm-watch"
  },
  "watch": {
    "build": "src/**/*.js",
    "lint": {
      "extensions": "js,html",
      "patterns": [
        "{src,test}/**/*.js",
        "examples/**/*.html"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/posva/vuexfire.git"
  },
  "keywords": [
    "vuex",
    "fire",
    "vue",
    "firebase",
    "redux",
    "store",
    "bind",
    "opinionated"
  ],
  "peerDependencies": {
    "firebase": "^2.4.1 || 3.x.x"
  },
  "author": "Eduardo San Martin Morote <posva13@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/posva/vuexfire/issues"
  },
  "homepage": "https://github.com/posva/vuexfire#readme",
  "devDependencies": {
    "ava": "^0.17.0",
    "browser-env": "^2.0.19",
    "chai": "^3.5.0",
    "eslint": "^3.12.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-html": "^1.7.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "firebase": "^3.6.4",
    "firebase-mock": "^1.0.3",
    "istanbul-instrumenter-loader": "^1.2.0",
    "karma": "^1.3.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sinon-chai": "^1.2.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "^1.8.1",
    "lolex": "^1.5.2",
    "mocha": "^3.2.0",
    "npm-watch": "^0.1.7",
    "phantomjs-prebuilt": "^2.1.14",
    "promise-polyfill": "^6.0.2",
    "rollup": "^0.39.2",
    "rollup-plugin-buble": "^0.15.0",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "uglify-js": "^2.7.5",
    "vue": "^2.1.8",
    "vuex": "^2.1.1",
    "webpack": "^1.14.0"
  },
  "ava": {
    "babel": "inherit",
    "modules": false,
    "require": [
      "babel-register"
    ]
  }
}
